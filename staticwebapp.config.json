{
    "navigationFallback": {
        "rewrite": "/index.html"
    },
  "trailingSlash": "auto",
  "routes": [
      {
        "route": "/login",
        "rewrite": "/.auth/login/aadb2c"
      },
      {
        "route": "/logout",
        "redirect": "/.auth/logout"
      },
      {
        "route": "/*",
        "allowedRoles": ["authenticated"]
      }
    ],
    "responseOverrides": {
      "401": {
        "redirect": "/login",
        "statusCode": 302
      }
    },
    "auth": {
      "identityProviders": {
        "customOpenIdConnectProviders": {
          "aadb2c": {
            "registration": {
              "clientIdSettingName": "AADB2C_PROVIDER_CLIENT_ID",
              "clientCredential": {
                "clientSecretSettingName": "AADB2C_PROVIDER_CLIENT_SECRET"
              },
              "openIdConnectConfiguration": {
                "wellKnownOpenIdConfiguration": "https://smartdryeyes.b2clogin.com/smartdryeyes.onmicrosoft.com/B2C_1_SmartDryEyes_SignIn/v2.0/.well-known/openid-configuration"
              }
            },
            "login": {
              "nameClaimType": "http://schemas.xmlsoap.org/ws/2005/05/identity/claims/nameidentifier",
              "scopes": [],
              "loginParameterNames": []
            }
          }
        }
      }
  }  
}
